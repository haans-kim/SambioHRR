{
  "name": "hr-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev --port 3003",
    "build": "next build",
    "build:electron": "cross-env ELECTRON_BUILD=true next build",
    "start": "next start",
    "lint": "next lint",
    "update-org-stats": "npx tsx scripts/update-organization-stats-with-ground-rules.ts",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3003 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:electron && npm run electron:compile && electron-builder",
    "electron:build:win": "npm run build:electron && npm run electron:compile && electron-builder --win --x64",
    "electron:build:mac": "npm run build:electron && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "npm run build:electron && npm run electron:compile && electron-builder --linux"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "immer": "^10.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "use-immer": "^0.11.0",
    "xlsx": "^0.18.5",
    "zod": "^4.0.16",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sambio.hrr",
    "productName": "SambioHRR",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "app/**/*",
      "components/**/*",
      "contexts/**/*",
      "hooks/**/*",
      "lib/**/*",
      "stores/**/*",
      "types/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "public/**/*",
      "package.json",
      "next.config.ts",
      "tsconfig.json",
      "!**/*.db"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
